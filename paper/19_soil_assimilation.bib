@article{dharssi_operational_2011,
  title = {Operational Assimilation of {{ASCAT}} Surface Soil Wetness at the {{Met Office}}},
  author = {Dharssi, I. and Bovis, K. J. and Macpherson, B. and Jones, C. P.},
  year = {2011},
