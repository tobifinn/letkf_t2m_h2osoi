@article{kalnay_accelerating_2010,
  title = {Accelerating the Spin-up of {{Ensemble Kalman Filtering}}},
  author = {Kalnay, Eugenia and Yang, Shu-Chih},
  year = {2010},
  volume = {136},
  pages = {1644--1651},
